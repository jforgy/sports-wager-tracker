<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>My Wagers</h1>
  <div>
    <%= link_to "Import CSV", new_wager_import_path, class: "btn btn-outline-primary me-2" %>
    <%= link_to "New Wager", new_wager_path, class: "btn btn-primary" %>
  </div>
</div>

<!-- Filter and Export Section -->
<div class="card mb-4">
  <div class="card-body">
    <div class="row align-items-end">
      <div class="col-md-4">
        <%= form_with url: wagers_path, method: :get, local: true, class: "d-flex" do |f| %>
          <%= f.select :tag, options_for_select([['All Tags', '']] + @all_tags.map { |tag| [tag, tag] }, @current_tag), 
                      {}, { class: "form-select me-2", onchange: "this.form.submit();" } %>
        <% end %>
      </div>
      <div class="col-md-4">
        <% if @current_tag.present? %>
          <span class="badge bg-primary fs-6">Filtered by: <%= @current_tag %></span>
          <%= link_to "Clear Filter", wagers_path, class: "btn btn-sm btn-outline-secondary ms-2" %>
        <% end %>
      </div>
      <div class="col-md-4 text-end">
        <div class="btn-group">
          <%= link_to "Export All", wager_imports_export_path(format: :csv), class: "btn btn-outline-success btn-sm" %>
          <% if @current_tag.present? %>
            <%= link_to "Export Filtered", wager_imports_export_path(format: :csv, tag: @current_tag), class: "btn btn-outline-success btn-sm" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Statistics Dashboard -->
<div class="row mb-4">
  <div class="col-md-3">
    <div class="card text-center">
      <div class="card-body">
        <h5 class="card-title">Total Wagered</h5>
        <p class="card-text h4">$<%= number_with_precision(@total_wagered, precision: 2) %></p>
        <% if @current_tag.present? %>
          <small class="text-muted">for <%= @current_tag %></small>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card text-center">
      <div class="card-body">
        <h5 class="card-title">Profit/Loss</h5>
        <p class="card-text h4 <%= @total_profit_loss >= 0 ? 'text-success' : 'text-danger' %>">
          $<%= number_with_precision(@total_profit_loss, precision: 2) %>
        </p>
        <% if @current_tag.present? %>
          <small class="text-muted">for <%= @current_tag %></small>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card text-center">
      <div class="card-body">
        <h5 class="card-title">ROI</h5>
        <p class="card-text h4 <%= @roi_percentage >= 0 ? 'text-success' : 'text-danger' %>">
          <%= @roi_percentage %>%
        </p>
        <% if @current_tag.present? %>
          <small class="text-muted">for <%= @current_tag %></small>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card text-center">
      <div class="card-body">
        <h5 class="card-title">Win Rate</h5>
        <p class="card-text h4"><%= @win_percentage %>%</p>
        <% if @current_tag.present? %>
          <small class="text-muted">for <%= @current_tag %></small>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Wagers Table -->
<% if @wagers.any? %>
  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Date</th>
          <th>Amount</th>
          <th>Odds</th>
          <th>Result</th>
          <th>Profit/Loss</th>
          <th>Sportsbook</th>
          <th>Tags</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @wagers.each do |wager| %>
          <tr>
            <td><%= wager.date.strftime("%m/%d/%Y") %></td>
            <td>$<%= number_with_precision(wager.amount, precision: 2) %></td>
            <td><%= wager.odds %></td>
            <td>
              <span class="badge <%= wager.result == 'Win' ? 'bg-success' : wager.result == 'Loss' ? 'bg-danger' : 'bg-secondary' %>">
                <%= wager.result %>
              </span>
            </td>
            <td class="<%= wager.profit_loss >= 0 ? 'text-success' : 'text-danger' %>">
              $<%= number_with_precision(wager.profit_loss, precision: 2) %>
            </td>
            <td><%= wager.sportsbook %></td>
            <td>
              <% if wager.tags.present? %>
                <% wager.tags.split(',').each do |tag| %>
                  <%= link_to tag.strip, wagers_path(tag: tag.strip), class: "badge bg-light text-dark text-decoration-none me-1" %>
                <% end %>
              <% end %>
            </td>
            <td>
              <%= link_to "View", wager, class: "btn btn-sm btn-outline-primary" %>
              <%= link_to "Edit", edit_wager_path(wager), class: "btn btn-sm btn-outline-secondary" %>
              <%= link_to "Delete", wager, method: :delete, 
                          confirm: "Are you sure?", 
                          class: "btn btn-sm btn-outline-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="text-center">
    <% if @current_tag.present? %>
      <p class="lead">No wagers found for tag: <strong><%= @current_tag %></strong></p>
      <%= link_to "Clear Filter", wagers_path, class: "btn btn-outline-secondary me-2" %>
    <% else %>
      <p class="lead">No wagers yet!</p>
    <% end %>
    <%= link_to "Add your first wager", new_wager_path, class: "btn btn-primary btn-lg" %>
  </div>
<% end %>