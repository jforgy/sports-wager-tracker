<h1>Import CSV</h1>

<%= form_with url: csv_import_path, method: :post, multipart: true, local: true do |form| %>
  <div class="mb-3">
    <%= form.label :csv_file, "CSV File" %>
    <%= form.file_field :csv_file, accept: ".csv", required: true, class: "form-control" %>
  </div>
  
  <div class="mb-3">
    <%= form.submit "Import", class: "btn btn-primary" %>
    <%= link_to "Cancel", wagers_path, class: "btn btn-secondary" %>
  </div>
<% end %>

<p>Required columns: date, amount, odds, result, sportsbook, tags</p>